{
  "name": "delicious-bites-backend",
  "version": "2.0.0",
  "description": "Enhanced restaurant backend with full features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node -e \"require('./config/database').connect().then(() => require('./migrations/001_create_tables').createTables()).then(() => require('./migrations/003_add_new_tables').addNewTables()).then(() => process.exit(0))\"",
    "seed": "node -e \"require('./config/database').connect().then(() => require('./migrations/002_seed_data').seedData()).then(() => process.exit(0))\"",
    "reset-db": "rm -f data/restaurant.db && npm run migrate && npm run seed",
    "setup": "npm install && npm run migrate && npm run seed"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": ["restaurant", "api", "nodejs", "express", "sqlite", "sql", "booking", "reviews", "fullstack"],
  "author": "Chidari Sai Krishna",
  "license": "MIT"
}
